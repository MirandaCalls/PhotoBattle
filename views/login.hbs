<form id="loginForm" class="bg-light primary-form auth-form" action="/login" method="POST" novalidate>
    <h3>Login</h1>
    {{#if serverMessage}}
        <div class="alert alert-danger">{{serverMessage}}</div>
    {{/if}}
    <div class="form-group">
        <input type="text" id="username" class="form-control" name="username" placeholder="Username" value="{{formData.username}}" required>
            <div class="invalid-feedback">
            Please provide a username.
        </div>
    </div>
    <div class="form-group">
        <input type="password" id="password" class="form-control" name="password" placeholder="Password" value="{{formData.password}}" required>
        <div class="invalid-feedback">
            Please provide a password.
        </div>
    </div>
    <button class="btn btn-primary btn-block">Login</button>
    <small class="form-text mt-2">Don't have an account? <a href="/register">Register</a></small>
</form>
<script>
    window.addEventListener('load', function() {
    let form = document.getElementById('loginForm');
    form.addEventListener('submit', (event) => {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>